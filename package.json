{
    "name": "plugin_name",
    "version": "1.0.0",
    "type": "module",
    "description": "A WordPress boilerplate plugin using vue.js",
    "scripts": {
        "dev": "npm i && node scripts/set_env_mode.js dev && vite",
        "watch": "npm run dev",
